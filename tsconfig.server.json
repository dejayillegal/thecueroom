// tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // where to put the compiled JS
    "outDir": "dist/server",
    // where your .ts lives
    "rootDir": "server",
    // Node-friendly module + target
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    // strip types only (no declarations)
    "declaration": false
  },
  // only compile your server code
  "include": ["server/**/*.ts"]
}
