{
  "compilerOptions": {
    "target":           "ES2020",
    "module":           "commonjs",
    "moduleResolution": "node",
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "strict":           false,
    "resolveJsonModule": true,
    "allowJs":          true,           // so TS can import .js from dist/shared
    "baseUrl":          ".",
    "rootDir":          ".",            // cover /server, server/vite.ts and vite.config.ts
    "outDir":           "dist/server",
    "paths": {
      "@shared/*": ["dist/shared/*.js"] // at runtime point at your compiled shared code
    }
  },
  "include": [
    "server/**/*.ts",    // your API + vite.ts helper
    "vite.config.ts"     // pulled in by server/vite.ts in dev mode
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
