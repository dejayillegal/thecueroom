// File: tsconfig.server.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",         // ‚Üê emit require()/exports
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,

    "rootDir": "server",
    "outDir": "dist/server",

    "baseUrl": ".",
    "paths": {
      "@shared/*": ["dist/shared/*.js"]
    }
  },
  "include": ["server/**/*.ts"]
}
