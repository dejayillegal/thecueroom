{
  "compilerOptions": {
    "target":           "ES2020",
    "module":           "commonjs",
    "moduleResolution": "node",
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "strict":           false,
    "resolveJsonModule": true,
    "allowJs":          true,
    "baseUrl":          ".",
    "paths": {
      "@shared/*": ["dist/shared/*.js"]
    },
    "rootDir":          "server",
    "outDir":           "dist/server"
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "client"
  ]
}
