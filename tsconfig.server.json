{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",            // emit ESM imports/exports
    "moduleResolution": "node16",  // Node‚Äêstyle resolution for ESM
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,

    "rootDir": "server",           // your TS source
    "outDir": "dist/server",       // compiled JS

    "baseUrl": ".",                
    "paths": {
      "@shared/*": ["dist/shared/*.js"]  // pick up your shared ESM JS
    }
  },
  "include": ["server/**/*.ts"]
}
