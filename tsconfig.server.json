{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "global.d.ts"
  ]
}
