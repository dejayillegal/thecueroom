// tsconfig.server.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // where to put the compiled JS
    "outDir": "dist/server",
    // where your .ts lives
    "rootDir": "server",
    // Node-friendly module + target
    "module": "Node16",
    "target": "ES2020",
    "esModuleInterop": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "noEmitOnError": false,
    // use Node-friendly module resolution to avoid bundler errors
    "moduleResolution": "node16",
    // strip types only (no declarations)
    "declaration": false
  },
  // only compile your server code
  "include": ["server/**/*.ts"]
}
