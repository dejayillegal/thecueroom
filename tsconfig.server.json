{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "dist/server",
    "rootDir": ".",                // ‚Üê allow imports from server/, shared/, and top-level files
    "typeRoots": [
      "node_modules/@types",
      "server/types"
    ]
  },
  "include": [
    "server/**/*.ts",              // your API code
    "shared/**/*.ts",              // your shared Zod schemas/types
    "server/vite.ts"               // your Vite-helper (if you still need it)
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
