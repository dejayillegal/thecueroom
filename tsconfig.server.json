// tsconfig.server.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,          // ignore all node_modules type errors
    "resolveJsonModule": true,
    "rootDir": ".",                // compile both server & shared
    "outDir": "dist",
    "baseUrl": ".",                // for paths mapping
    "paths": {
      "@shared/*": ["shared/*"]    // map @shared/schema â†’ shared/schema.ts
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"]
}
