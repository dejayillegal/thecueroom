{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,

    // Donâ€™t try to compile any .js
    "allowJs": false,

    // Your server source root & output
    "rootDir": "server",
    "outDir": "dist/server",

    // Type-only imports for @shared
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["dist/shared/*.d.ts"]
    },

    // Skip checking of lib .d.ts files for speed & noise
    "skipLibCheck": true
  },

  // Only compile your server .ts files
  "include": ["server/**/*.ts"]
}
