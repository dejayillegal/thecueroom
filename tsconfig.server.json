{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "dist/server",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types",
      "server/types"
    ]
  },
  "include": [
    "server/types/**/*.d.ts",
    "server/**/*.ts",
    "shared/**/*.ts"
  ]
}
