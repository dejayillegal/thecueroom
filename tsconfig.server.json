{
  "compilerOptions": {
    "target":           "ES2020",
    "module":           "commonjs",
    "rootDir":          "server",          
    "outDir":           "dist/server",
    "moduleResolution": "node",
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "strict":           false,
    "allowJs":          true,              // so we can import generated .js in dist/shared
    "baseUrl":          ".",
    "paths": {
      "@shared/*": ["dist/shared/*.js"]   // point at your compiled shared output
    }
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
