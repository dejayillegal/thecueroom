{
  "compilerOptions": {
    "target":           "ES2020",
    "module":           "commonjs",
    "moduleResolution": "node",
    "esModuleInterop":  true,
    "skipLibCheck":     true,
    "strict":           false,
    "resolveJsonModule": true,
    "baseUrl":          ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir":           "dist/server",
    "rootDir": ".",         
    "typeRoots": [
      "node_modules/@types",
      "server/types"
    ]
  },
  "include": [
    "server/**/*.ts",
    "shared/**/*.ts",
    "vite.config.ts"
  ],
  "exclude": [                    
    "node_modules",
    "dist"
  ]
}
