// tsconfig.shared.json
{
  "compilerOptions": {
    "rootDir": "shared",          // where your shared code actually lives
    "outDir": "dist/shared",
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "target": "es2020",

    // these two stop TypeScript from chewing on your node_modules type files
    "moduleResolution": "node",
    "skipLibCheck": true,

    // donâ€™t load any @types/* by default
    "types": ["node"] 
  },
  "include": ["shared/**/*"],     // only your shared code
  "exclude": ["node_modules", "dist"]
}
