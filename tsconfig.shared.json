// tsconfig.shared.json
{
  "compilerOptions": {
    "rootDir": "shared",
    "outDir": "dist/shared",

    "declaration": true,
    "declarationMap": true,

    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,

    "types": ["node"]
  },
  "include": ["shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
