// tsconfig.shared.json
{
  "compilerOptions": {
    "rootDir": "shared",          
    "outDir": "dist/shared",

    "declaration": true,
    "declarationMap": true,

    "module": "commonjs",         // ‚Üê emit require()/exports
    "target": "ES2020",
    "moduleResolution": "node",
    "skipLibCheck": true,

    // no automatic @types loaded
    "types": []
  },
  "include": ["shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
