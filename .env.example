# TheCueRoom Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@host:port/database
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=thecueroom

# Authentication & Security (Required)
SESSION_SECRET=your-super-secret-session-key-here-generate-64-random-characters

# Free Email Hosting Options (Choose one method)

# Method 1: Gmail SMTP (Free - Recommended)
GMAIL_USER=your-gmail@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password
FROM_EMAIL=noreply@thecueroom.xyz

# Method 2: Custom SMTP (For other free providers like Zoho)
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@thecueroom.xyz
SMTP_PASS=your-password

# Method 3: Outlook/Hotmail (Free alternative)
OUTLOOK_USER=your-email@outlook.com
OUTLOOK_PASSWORD=your-password

# Email Configuration
ADMIN_EMAIL=admin@thecueroom.xyz
SUPPORT_EMAIL=support@thecueroom.xyz
CONTACT_EMAIL=contact@thecueroom.xyz

# Domain Configuration (Production)
DOMAIN=thecueroom.xyz
SITE_URL=https://thecueroom.xyz
API_URL=https://api.thecueroom.xyz

# AI Services (Optional)
OPENAI_API_KEY=your-openai-api-key-here

# Application Environment
NODE_ENV=development
PORT=5000

# Legacy SendGrid (Optional - if you have paid account)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Replit Specific (if deploying on Replit)
REPLIT_DOMAINS=your-replit-domain.replit.app